extends ../../layouts/default.pug 
include ../../mixins/alert.pug 

block main 
    +alert-error(5000)

    .container.my-5 
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Đăng ký tài khoản 
                form(
                    action="/user/register"
                    method="POST"
                )
                    div(class="form-group")
                        //- label(for="fullName") Ho ten 
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                            placeholder="Nhập họ và tên"
                            required 
                        )
                    div(class="form-group")
                        //- label(for="email") Email 
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            placeholder="Nhập Email"
                            required 
                        )
                    div(class="form-group")
                        //- label(for="email") Email 
                        input(
                            type="text"
                            class="form-control"
                            id="phone"
                            name="phone"
                            placeholder="Nhập số điện thoại"
                            required 
                        )
                    div(class="form-group")
                        //- label(for="password") Mat khau
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            placeholder="Nhập mật khẩu"
                            required 
                        )
                    div(class="form-group")
                        //- label(for="password") Mat khau
                        input(
                            type="password"
                            class="form-control"
                            id="passwordConfirm"
                            name="passwordConfirm"
                            placeholder="Nhập lại mật khẩu"
                            required 
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn custom-button btn-block"
                        ) Đăng ký
